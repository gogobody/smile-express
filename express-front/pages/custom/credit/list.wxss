scroll-view {
  width: 100%;
}

.item {
  width: 90%;
  padding-right: 10px;
  padding-left: 10px;
  height: 250rpx;
  margin: 20rpx auto;
  background: rgb(238, 233, 233);
  overflow: hidden;
}

.item .img {
  width: 430rpx;
  margin-right: 20rpx;
  float: left;
}

.title {
  font-size: 30rpx;
  display: block;
  margin: 30rpx auto;
}
.type {
  font-size: 26rpx;
  line-height: 15rpx;
  display: block;
}
.description {
  margin-top: 10px;
  display: block;
  font-size: 26rpx;

}
.time {
  margin-top: 10px;
  display: block;
  font-size: 26rpx;

}